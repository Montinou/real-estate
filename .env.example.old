# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/real_estate_cordoba
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=real_estate_cordoba
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false

# Storage Configuration
STORAGE_TYPE=local # Options: local, minio, s3
STORAGE_PATH=/Users/agustinmontoya/Projectos/real-estate/data/images
USE_MINIO=false

# MinIO Configuration (Optional)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=properties

# MercadoLibre API
ML_CLIENT_ID=your_client_id_here
ML_CLIENT_SECRET=your_client_secret_here
ML_ACCESS_TOKEN=your_access_token_here
ML_REFRESH_TOKEN=your_refresh_token_here
ML_REDIRECT_URI=http://localhost:3000/auth/mercadolibre/callback

# Google Cloud (Properati BigQuery)
GCP_PROJECT_ID=your_project_id_here
GCP_KEY_FILE=/path/to/service-account-key.json

# Supabase (Optional - for auth only in free tier)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Scraping Configuration
USER_AGENT=RealEstateAggregator/1.0 (+https://your-site.com; contact@email.com)
ENABLE_ZONAPROP=false
ENABLE_ARGENPROP=false
ENABLE_INMUEBLES24=false
MAX_CONCURRENT_SCRAPERS=1
REQUEST_DELAY_MIN=2000
REQUEST_DELAY_MAX=5000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=0.5
RATE_LIMIT_REQUESTS_PER_HOUR=1200
RATE_LIMIT_REQUESTS_PER_DAY=10000

# Queue Configuration
QUEUE_TYPE=pgboss # Options: pgboss, bullmq
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
PORT=3000
API_BASE_URL=http://localhost:3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly
LOG_TO_FILE=true
LOG_DIR=./logs

# Geocoding
GEOCODING_SERVICE=nominatim # Options: nominatim, google, mapbox
NOMINATIM_URL=https://nominatim.openstreetmap.org
GEOCODING_CACHE_TTL=2592000 # 30 days in seconds

# Image Processing
IMAGE_QUALITY_THUMBNAIL=80
IMAGE_QUALITY_CARD=85
IMAGE_QUALITY_GALLERY=90
IMAGE_QUALITY_FULL=90
IMAGE_MAX_WIDTH=1920
IMAGE_FORMAT=webp # Options: webp, avif, jpeg
GENERATE_BLURHASH=true

# Scheduling (cron expressions)
SCHEDULE_MERCADOLIBRE=0 */6 * * * # Every 6 hours
SCHEDULE_PROPERATI=0 4 * * 0 # Sundays at 4 AM
SCHEDULE_ZONAPROP=0 3 * * * # Daily at 3 AM
SCHEDULE_DEDUPLICATION=0 6 * * 0 # Sundays at 6 AM
SCHEDULE_CLEANUP=0 2 * * * # Daily at 2 AM

# Process Management
PM2_MAX_MEMORY_RESTART=1G
PM2_INSTANCES=2
PM2_EXEC_MODE=cluster

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_IMAGE_DOWNLOAD=true
ENABLE_GEOCODING=true
ENABLE_DEDUPLICATION=true
ENABLE_PRICE_HISTORY=true
ENABLE_API=true
ENABLE_SCHEDULER=true

# Development
DEBUG=false
VERBOSE_LOGGING=false